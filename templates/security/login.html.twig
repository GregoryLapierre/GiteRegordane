{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<main>
		<img class="img_vector1_login" src="/img/Vector1.png" alt="image_vector">
		<h2>ME CONNECTER</h2>
		<section class="container my-5">
			<article class="row">
				<div class="col col-md-9 col-lg-6 mx-auto login">
					<form method="post">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}
						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control shadow" autocomplete="email" required autofocus>
						
						<label class="mt-2" for="inputPassword">Mot de passe</label>
						<input type="password" name="password" id="inputPassword" class="form-control mb-2 shadow" autocomplete="current-password" required>
						
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						<a href="{{ path('app_forgotten_password') }}">Mot de passe oubli√©</a>
						<br>
						<button class="btn btn-lg shadow mt-3" type="submit">
							Me connecter
						</button>
						<a class="btn btn-lg shadow mt-3 ms-2" type="button" href="{{ path('app_register') }}">
							M'inscrire
						</a>
					</form>
				</div>
			</article>
		</section>
		<img class="img_vector2_login" src="/img/Vector2.png" alt="image_vector">
	</main>
{% endblock %}
